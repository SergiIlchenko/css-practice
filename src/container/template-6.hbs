<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}

	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
				id="form-input-{{id}}" />
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
	<div class="updates_border_title">
		<h2 class="updates_title">{{title}}</h2>
	</div>

	{{#each list}}
	<div class="list">
		<div class="list_img">
			<img class="img" src="#" />
		</div>
		<div class="list_content">
			<strong>{{nickname}}</strong>
			<p>{{description}}</p>
		</div>
	</div>
	{{/each}}

	{{#with show_all}}
	<a class="show_all" href="{{url}}">{{text}}</a>
	{{/with}}
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
	<div class="expirience_title">
		<h2>{{title}}</h2>
	</div>
	<div class="expirience_badge">
		<p>{{badge}}</p>
	</div>

	<div class="expirience_list">
		{{#each list}}
		<div>
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>
		{{/each}}
	</div>

	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>